<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ADMIN: Dashboard</title>
    <!-- bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- fontawesome -->
    <link
      rel="stylesheet"
      href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css"
      integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p"
      crossorigin="anonymous"
    />
  </head>

  <style>
    tr {
      text-align: center;
    }
    h1 {
      text-align: center;
    }

    .parentOfCount {
      display: flex;
      justify-content: space-between;
      margin: 10px 50px;
    }
    .countOfUsers {
      text-align: center;
      background-color: #50b476;
      width: 200px;
      border-radius: 5px;
      padding: 10px 0;
    }

    .fas {
      padding: 10px;
      background-color: #fff;
      border-radius: 100px;
    }

    h4 {
      color: #fff;
    }

    @media (max-width: 768px) {
      .countOfUsers {
        margin: 10px 10px;
      }
    }
  </style>

  <body>
    <h1>Advocate Dashboard</h1>
    <p style="text-align: center">
      Please click on "<em>Mark as Solved</em>" option if the case is solved top
      update the status
    </p>
    <div class="parentOfCount">
      <div class="countOfUsers">
        <i class="fas fa-users"></i>
        <h4 id="rowCount"></h4>
      </div>
      <div class="countOfUsers">
        <i class="fas fa-user-shield"></i>
        <h4>Advocate Admin</h4>
      </div>
    </div>

    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Phone</th>
          <th scope="col">Message</th>
          <th scope="col">Status</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach((res)=>{ %>
        <tr>
          <td><%= res.name %></td>
          <td><%= res.phone %></td>
          <td><%= res.complaint %></td>
          <td>
            <% if(res.status){ %>
            <a
              href="/deleteAction/<%= res._id %>"
              style="text-decoration: none; color: red"
            >
              Mark as Solved
            </a>
            <% } else{%>
            <a
              href="/deleteAction/<%= res._id %>"
              style="text-decoration: none; color: rgb(51, 207, 51)"
            >
              Solved
            </a>
            <% } %>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <script>
      const x = document.getElementsByTagName("tr").length - 1;
      console.log(x);
      document.getElementById("rowCount").innerHTML = `Total registered ${x}`;
    </script>
  </body>
</html>
